@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-6 text-center">
            <h1>WELCOME BACK! LET'S LOGIN TO CONTINUE</h1>

            <form method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control @(ModelState.ContainsKey("Email") ? "is-invalid" : "")" id="email" name="email" placeholder="Enter your email" required>
                    <div class="invalid-feedback">
                        Email
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control @(ModelState.ContainsKey("Password") ? "is-invalid" : "")" id="password" name="password" placeholder="Enter your password" required>
                    <div class="invalid-feedback">
                       Password
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .form-control {
            border: none;
            border-bottom: 1px solid #ccc;
            background-color: transparent;
        }

            .form-control:focus {
                box-shadow: none;
                border-color: #007bff;
            }

        .container {
            max-width: 500px;
            margin-top: 100px;
        }

        .form-group {
            text-align: left;
        }

        .form-control {
            display: inline-block;
            width: 100%;
            padding-left: 10px;
        }

        .btn {
            width: auto;
            padding: 10px 20px;
        }
    </style>

}
